<html>
<h1>Update {{students.first_name}} {{students.last_name}}:</h1>
<form id="update-person" action="/people" method="post">
    First name: <input type="text" name="fname" value="{{students.first_name}}"><br>
    Last name: <input type="text" name="lname" value="{{students.last_name}}"><br>
    GPA: <input type="float" name="gpa" value="{{students.GPA}}"><br>
    Club ID: <select name="cid" id="planet-selector"> 
        {{#each clubids}}
            <option value="{{cuid}}">{{cuid}}</option>
        {{/each}}
        <option value='NULL'>NULL</option>
    </select><br>
</form>
<button onclick="updatePerson({{students.studentID}})">Update</button>
<script defer>selectPlanet({{person.homeworld}});</script>
</html>

